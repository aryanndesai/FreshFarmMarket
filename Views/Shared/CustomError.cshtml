@{
    ViewData["Title"] = ViewBag.ErrorTitle ?? "Error";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="card shadow-lg">
                <div class="card-body p-5">
                    <div class="mb-4">
                        @if (ViewBag.ErrorCode == "404")
                        {
                            <i class="bi bi-search" style="font-size: 5rem; color: #dc3545;"></i>
                        }
                        else if (ViewBag.ErrorCode == "403")
                        {
                            <i class="bi bi-shield-x" style="font-size: 5rem; color: #ffc107;"></i>
                        }
                        else if (ViewBag.ErrorCode == "500")
                        {
                            <i class="bi bi-exclamation-triangle" style="font-size: 5rem; color: #dc3545;"></i>
                        }
                        else
                        {
                            <i class="bi bi-exclamation-octagon" style="font-size: 5rem; color: #dc3545;"></i>
                        }
                    </div>

                    <h1 class="display-1 fw-bold text-danger">@ViewBag.ErrorCode</h1>
                    <h3 class="mb-3">@ViewBag.ErrorTitle</h3>
                    <p class="text-muted mb-4">@ViewBag.ErrorMessage</p>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-house-door-fill"></i> Go Home
                        </a>
                        <button onclick="history.back()" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Go Back
                        </button>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <p class="text-muted small">
                    If you believe this is a mistake, please contact support.
                </p>
            </div>
        </div>
    </div>
</div>