@model FreshFarmMarket.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password - Fresh Farm Market";
}

<style>
    .change-password-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        padding: 40px 0;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .change-password-card {
        border: none;
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
        overflow: hidden;
        background: white;
    }

    .change-password-header {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        padding: 40px 30px;
        text-align: center;
        border: none;
    }

    .change-password-header h3 {
        font-size: 28px;
        font-weight: 700;
        margin-bottom: 10px;
        color: white;
    }

    .change-password-header p {
        font-size: 16px;
        color: rgba(255, 255, 255, 0.95);
        margin: 0;
    }

    .password-icon {
        font-size: 56px;
        margin-bottom: 15px;
    }

    .change-password-body {
        padding: 40px 35px;
    }

    .form-label-custom {
        font-weight: 600;
        color: #495057;
        margin-bottom: 8px;
        font-size: 14px;
        display: block;
    }

    .form-control-custom {
        border: 2px solid #e3e6f0;
        border-radius: 12px;
        padding: 14px 18px;
        font-size: 15px;
        transition: all 0.3s ease;
        width: 100%;
    }

    .form-control-custom:focus {
        border-color: #28a745;
        box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.15);
        outline: none;
    }

    .form-group-spacing {
        margin-bottom: 25px;
    }

    .password-strength-container {
        margin-top: 12px;
        margin-bottom: 8px;
    }

    .progress-custom {
        height: 6px;
        border-radius: 10px;
        background-color: #f0f0f0;
        overflow: hidden;
    }

    .password-strength-text {
        display: block;
        margin-top: 6px;
        font-size: 13px;
        font-weight: 500;
    }

    .requirements-box {
        background: #f8f9fc;
        border-left: 4px solid #28a745;
        padding: 20px;
        border-radius: 12px;
        margin-bottom: 25px;
    }

    .requirements-box strong {
        color: #28a745;
        font-size: 15px;
        display: block;
        margin-bottom: 12px;
    }

    .requirements-box ul {
        margin: 0;
        padding-left: 20px;
    }

    .requirements-box li {
        color: #5a6c7d;
        font-size: 14px;
        margin-bottom: 6px;
        line-height: 1.6;
    }

    .requirements-box li:last-child {
        margin-bottom: 0;
    }

    .warning-box {
        background: linear-gradient(135deg, #ffc107 0%, #ff9800 100%);
        color: white;
        padding: 20px;
        border-radius: 12px;
        margin-bottom: 25px;
        box-shadow: 0 4px 15px rgba(255, 193, 7, 0.3);
    }

    .warning-box i {
        font-size: 24px;
        margin-right: 10px;
    }

    .warning-box strong {
        display: block;
        font-size: 16px;
        margin-bottom: 8px;
    }

    .btn-submit-custom {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        border: none;
        padding: 16px 30px;
        font-size: 17px;
        font-weight: 600;
        border-radius: 12px;
        color: white;
        width: 100%;
        transition: all 0.3s ease;
        cursor: pointer;
        box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
        position: relative;
        z-index: 1000;
        margin-top: 10px;
    }

    .btn-submit-custom:hover:not(:disabled) {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(40, 167, 69, 0.4);
        background: linear-gradient(135deg, #20c997 0%, #28a745 100%);
    }

    .btn-submit-custom:active {
        transform: translateY(0);
    }

    .btn-submit-custom:disabled {
        opacity: 0.7;
        cursor: not-allowed;
    }

    .btn-submit-custom i {
        margin-right: 10px;
        font-size: 18px;
    }

    .btn-submit-custom .spinner-border {
        width: 18px;
        height: 18px;
        margin-right: 10px;
    }

    .back-to-home {
        text-align: center;
        padding: 15px;
        background: #f8f9fc;
        border-radius: 12px;
        margin-top: 20px;
    }

    .back-to-home a {
        color: #28a745;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .back-to-home a:hover {
        color: #20c997;
        text-decoration: underline;
    }

    .back-to-home i {
        margin-right: 6px;
    }

    .section-divider {
        border-top: 2px solid #e3e6f0;
        margin: 30px 0;
        position: relative;
    }

    .section-divider::after {
        content: "New Password";
        position: absolute;
        top: -12px;
        left: 50%;
        transform: translateX(-50%);
        background: white;
        padding: 0 15px;
        color: #6c757d;
        font-size: 13px;
        font-weight: 600;
    }

    .alert-custom {
        border-radius: 12px;
        padding: 15px 20px;
        margin-bottom: 20px;
        border: none;
    }

    .validation-message {
        display: block;
        margin-top: 8px;
        font-size: 13px;
    }
</style>

<div class="change-password-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-6">
                <div class="change-password-card">
                    <div class="change-password-header">
                        <div class="password-icon">ðŸ”‘</div>
                        <h3>Change Password</h3>
                        <p>Keep your account secure</p>
                    </div>
                    <div class="change-password-body">
                    <div class="change-password-body">
                        @if (ViewBag.RequiredChange == true)
                        {
                            <div class="warning-box">
                                <i class="bi bi-exclamation-triangle-fill"></i>
                                <strong>Password Change Required!</strong>
                                Your password is older than 90 days. Please change it now for security.
                            </div>
                        }

                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success alert-custom">
                                <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
                            </div>
                        }

                        <form asp-action="ChangePassword" method="post" id="changePasswordForm">
                            @Html.AntiForgeryToken()
                            
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-custom" role="alert"></div>

                            <!-- Current Password -->
                            <div class="form-group-spacing">
                                <label asp-for="CurrentPassword" class="form-label-custom">Current Password</label>
                                <input asp-for="CurrentPassword" class="form-control-custom" placeholder="Enter current password" />
                                <span asp-validation-for="CurrentPassword" class="text-danger validation-message"></span>
                            </div>

                            <div class="section-divider"></div>

                            <!-- New Password -->
                            <div class="form-group-spacing">
                                <label asp-for="NewPassword" class="form-label-custom">New Password</label>
                                <input asp-for="NewPassword" class="form-control-custom" placeholder="Enter new password" id="newPassword" />
                                <span asp-validation-for="NewPassword" class="text-danger validation-message"></span>
                                
                                <!-- Password Strength Indicator -->
                                <div class="password-strength-container">
                                    <div class="progress-custom">
                                        <div id="passwordStrength" class="progress-bar" role="progressbar" style="width: 0%"></div>
                                    </div>
                                    <span id="passwordStrengthText" class="password-strength-text"></span>
                                </div>
                            </div>

                            <!-- Confirm New Password -->
                            <div class="form-group-spacing">
                                <label asp-for="ConfirmNewPassword" class="form-label-custom">Confirm New Password</label>
                                <input asp-for="ConfirmNewPassword" class="form-control-custom" placeholder="Re-enter new password" />
                                <span asp-validation-for="ConfirmNewPassword" class="text-danger validation-message"></span>
                            </div>

                            <!-- Password Requirements -->
                            <div class="requirements-box">
                                <strong><i class="bi bi-shield-check"></i> Password Requirements:</strong>
                                <ul>
                                    <li>At least 12 characters long</li>
                                    <li>Contains uppercase letter (A-Z)</li>
                                    <li>Contains lowercase letter (a-z)</li>
                                    <li>Contains number (0-9)</li>
                                    <li>Contains special character</li>
                                    <li>Cannot reuse last 2 passwords</li>
                                </ul>
                            </div>

                            <!-- Submit Button -->
                            <button type="submit" class="btn-submit-custom" id="submitBtn">
                                <i class="bi bi-shield-check"></i> Change Password
                            </button>

                            @if (ViewBag.RequiredChange != true)
                            {
                                <div class="back-to-home">
                                    <a asp-controller="Home" asp-action="Index">
                                        <i class="bi bi-arrow-left"></i> Back to Home
                                    </a>
                                </div>
                            }
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        // Password Strength Indicator
        document.getElementById('newPassword').addEventListener('input', function() {
            const password = this.value;
            const strengthBar = document.getElementById('passwordStrength');
            const strengthText = document.getElementById('passwordStrengthText');
            
            let strength = 0;
            
            if (password.length >= 12) strength++;
            if (/[a-z]/.test(password)) strength++;
            if (/[A-Z]/.test(password)) strength++;
            if (/[0-9]/.test(password)) strength++;
            if (/[@@$!%*?&#^()_+=\-\[\]{}|\\:;""'<>,.~/`]/.test(password)) strength++;
            
            const percentage = (strength / 5) * 100;
            strengthBar.style.width = percentage + '%';
            
            if (strength === 0) {
                strengthBar.className = 'progress-bar bg-secondary';
                strengthText.textContent = '';
            } else if (strength <= 2) {
                strengthBar.className = 'progress-bar bg-danger';
                strengthText.textContent = 'âš ï¸ Weak password';
                strengthText.style.color = '#dc3545';
            } else if (strength === 3) {
                strengthBar.className = 'progress-bar bg-warning';
                strengthText.textContent = 'âš¡ Moderate password';
                strengthText.style.color = '#ffc107';
            } else if (strength === 4) {
                strengthBar.className = 'progress-bar bg-info';
                strengthText.textContent = 'âœ“ Good password';
                strengthText.style.color = '#0dcaf0';
            } else {
                strengthBar.className = 'progress-bar bg-success';
                strengthText.textContent = 'âœ“âœ“ Strong password!';
                strengthText.style.color = '#28a745';
            }
        });

        // Add loading state on form submission
        document.getElementById('changePasswordForm').addEventListener('submit', function(e) {
            const submitBtn = document.getElementById('submitBtn');
            if (submitBtn) {
                submitBtn.disabled = true;
                submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Changing Password...';
            }
        });
    </script>
}