@model FreshFarmMarket.ViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
}

<style>
    .reset-password-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        padding: 40px 0;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .reset-password-card {
        border: none;
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
        overflow: hidden;
        background: white;
    }

    .reset-password-header {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        padding: 40px 30px;
        text-align: center;
        border: none;
    }

    .reset-password-header h3 {
        font-size: 28px;
        font-weight: 700;
        margin-bottom: 10px;
        color: white;
    }

    .reset-password-header p {
        font-size: 16px;
        color: rgba(255, 255, 255, 0.95);
        margin: 0;
    }

    .reset-password-body {
        padding: 40px 35px;
    }

    .form-label-custom {
        font-weight: 600;
        color: #495057;
        margin-bottom: 8px;
        font-size: 14px;
        display: block;
    }

    .form-control-custom {
        border: 2px solid #e3e6f0;
        border-radius: 10px;
        padding: 12px 18px;
        font-size: 15px;
        transition: all 0.3s ease;
        position: relative;
        z-index: 1;
    }

    .form-control-custom:focus {
        border-color: #28a745;
        box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.15);
    }

    .password-strength-container {
        margin-top: 12px;
        margin-bottom: 8px;
        position: relative;
        z-index: 1;
    }

    .progress-custom {
        height: 6px;
        border-radius: 10px;
        background-color: #f0f0f0;
        overflow: hidden;
        position: relative;
        z-index: 1;
    }

    .password-strength-text {
        display: block;
        margin-top: 6px;
        font-size: 13px;
        font-weight: 500;
        position: relative;
        z-index: 1;
    }

    .email-badge {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        color: white;
        padding: 15px 20px;
        border-radius: 12px;
        text-align: center;
        margin-bottom: 30px;
        font-size: 15px;
        position: relative;
        z-index: 1;
    }

    .email-badge i {
        margin-right: 8px;
        font-size: 18px;
    }

    .requirements-box {
        background: #f8f9fc;
        border-left: 4px solid #28a745;
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 30px;
        position: relative;
        z-index: 1;
    }

    .requirements-box strong {
        color: #28a745;
        font-size: 15px;
        display: block;
        margin-bottom: 12px;
    }

    .requirements-box ul {
        margin: 0;
        padding-left: 20px;
    }

    .requirements-box li {
        color: #5a6c7d;
        font-size: 14px;
        margin-bottom: 6px;
        line-height: 1.6;
    }

    .requirements-box li:last-child {
        margin-bottom: 0;
    }

    .btn-submit-custom {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        border: none;
        padding: 15px 30px;
        font-size: 16px;
        font-weight: 600;
        border-radius: 12px;
        color: white;
        width: 100%;
        transition: all 0.3s ease;
        cursor: pointer;
        box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
        position: relative;
        z-index: 10;
        margin-top: 10px;
    }

    .btn-submit-custom:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(40, 167, 69, 0.4);
        background: linear-gradient(135deg, #20c997 0%, #28a745 100%);
    }

    .btn-submit-custom:active {
        transform: translateY(0);
        box-shadow: 0 2px 10px rgba(40, 167, 69, 0.3);
    }

    .btn-submit-custom i {
        margin-right: 10px;
        font-size: 18px;
    }

    .form-group-spacing {
        margin-bottom: 25px;
        position: relative;
        z-index: 1;
    }

    .validation-message {
        display: block;
        margin-top: 8px;
        font-size: 13px;
        position: relative;
        z-index: 1;
    }

    .alert-custom {
        border-radius: 10px;
        padding: 15px 20px;
        margin-bottom: 25px;
        border: none;
        position: relative;
        z-index: 1;
    }

    /* Ensure no overlapping elements */
    form {
        position: relative;
        z-index: 1;
    }

    .card-body {
        position: relative;
        z-index: 2;
    }

    /* Icon styling */
    .lock-icon {
        font-size: 48px;
        margin-bottom: 10px;
        opacity: 0.9;
    }
</style>

<div class="reset-password-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-7 col-sm-10">
                <div class="card reset-password-card">
                    <div class="card-header reset-password-header">
                        <div class="lock-icon">üîê</div>
                        <h3>Reset Your Password</h3>
                        <p>Create a new secure password for your account</p>
                    </div>
                    
                    <div class="card-body reset-password-body">
                        <form asp-action="ResetPassword" method="post" id="resetPasswordForm">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="Token" />
                            <input type="hidden" asp-for="Email" />
                            
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-custom" role="alert"></div>

                            <div class="email-badge">
                                <i class="bi bi-envelope-check-fill"></i>
                                <strong>@Model.Email</strong>
                            </div>

                            <!-- New Password Field -->
                            <div class="form-group-spacing">
                                <label asp-for="NewPassword" class="form-label-custom">New Password</label>
                                <input asp-for="NewPassword" 
                                       type="password"
                                       class="form-control form-control-custom" 
                                       placeholder="Enter your new password" 
                                       id="newPassword" 
                                       autocomplete="new-password" />
                                <span asp-validation-for="NewPassword" class="text-danger validation-message"></span>
                                
                                <!-- Password Strength Indicator -->
                                <div class="password-strength-container">
                                    <div class="progress progress-custom">
                                        <div id="passwordStrength" 
                                             class="progress-bar" 
                                             role="progressbar" 
                                             style="width: 0%; transition: width 0.3s ease;"></div>
                                    </div>
                                    <small id="passwordStrengthText" class="password-strength-text text-muted"></small>
                                </div>
                            </div>

                            <!-- Confirm Password Field -->
                            <div class="form-group-spacing">
                                <label asp-for="ConfirmNewPassword" class="form-label-custom">Confirm New Password</label>
                                <input asp-for="ConfirmNewPassword" 
                                       type="password"
                                       class="form-control form-control-custom" 
                                       placeholder="Re-enter your new password" 
                                       autocomplete="new-password" />
                                <span asp-validation-for="ConfirmNewPassword" class="text-danger validation-message"></span>
                            </div>

                            <!-- Password Requirements -->
                            <div class="requirements-box">
                                <strong>‚úì Password Requirements:</strong>
                                <ul>
                                    <li>At least 12 characters long</li>
                                    <li>Contains uppercase letter (A-Z)</li>
                                    <li>Contains lowercase letter (a-z)</li>
                                    <li>Contains number (0-9)</li>
                                    <li>Contains special character (!@@#$%^&amp;*)</li>
                                    <li>Cannot reuse last 2 passwords</li>
                                </ul>
                            </div>

                            <!-- Submit Button with proper z-index -->
                            <div style="position: relative; z-index: 100; margin-top: 20px;">
                                <button type="submit" class="btn btn-submit-custom" id="submitBtn">
                                    <i class="bi bi-check-circle-fill"></i>
                                    Reset Password
                                </button>
                            </div>
                        </form>

                        <div class="text-center mt-4" style="position: relative; z-index: 1;">
                            <a asp-action="Login" class="text-decoration-none" style="color: #28a745; font-weight: 500;">
                                <i class="bi bi-arrow-left-circle"></i> Back to Login
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        // Ensure button is always clickable
        document.addEventListener('DOMContentLoaded', function() {
            const submitBtn = document.getElementById('submitBtn');
            const form = document.getElementById('resetPasswordForm');
            
            // Ensure button is above all elements
            submitBtn.style.position = 'relative';
            submitBtn.style.zIndex = '1000';
            submitBtn.style.pointerEvents = 'auto';
            
            // Add click event to ensure it works
            submitBtn.addEventListener('click', function(e) {
                console.log('Reset Password button clicked');
            });
        });

        // Password Strength Indicator
        document.getElementById('newPassword').addEventListener('input', function() {
            const password = this.value;
            const strengthBar = document.getElementById('passwordStrength');
            const strengthText = document.getElementById('passwordStrengthText');
            
            let strength = 0;
            const checks = {
                length: password.length >= 12,
                lowercase: /[a-z]/.test(password),
                uppercase: /[A-Z]/.test(password),
                number: /[0-9]/.test(password),
                special: /[@@$!%*?&#^()_+=\-\[\]{}|\\:;""'<>,.~/`]/.test(password)
            };
            
            // Count passed requirements
            Object.values(checks).forEach(passed => { if (passed) strength++; });
            
            const percentage = (strength / 5) * 100;
            strengthBar.style.width = percentage + '%';
            
            // Update visual feedback
            if (strength === 0 || password.length === 0) {
                strengthBar.className = 'progress-bar bg-secondary';
                strengthText.textContent = '';
            } else if (strength <= 2) {
                strengthBar.className = 'progress-bar bg-danger';
                strengthText.textContent = 'üî¥ Weak password';
                strengthText.style.color = '#dc3545';
            } else if (strength === 3) {
                strengthBar.className = 'progress-bar bg-warning';
                strengthText.textContent = 'üü° Moderate password';
                strengthText.style.color = '#ffc107';
            } else if (strength === 4) {
                strengthBar.className = 'progress-bar bg-info';
                strengthText.textContent = 'üîµ Good password';
                strengthText.style.color = '#0dcaf0';
            } else {
                strengthBar.className = 'progress-bar bg-success';
                strengthText.textContent = 'üü¢ Strong password!';
                strengthText.style.color = '#28a745';
            }
        });

        // Add visual feedback on form submission
        document.getElementById('resetPasswordForm').addEventListener('submit', function() {
            const submitBtn = document.getElementById('submitBtn');
            submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Resetting Password...';
            submitBtn.disabled = true;
        });
    </script>
}