@model FreshFarmMarket.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-lg">
                <div class="card-header bg-info text-white text-center">
                    <h3 class="mb-0"><i class="bi bi-question-circle-fill"></i> Forgot Password?</h3>
                    <p class="mb-0 small">No worries, we'll send you reset instructions</p>
                </div>
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <i class="bi bi-envelope-paper" style="font-size: 3rem; color: #0dcaf0;"></i>
                        <p class="mt-3 text-muted">Enter your email address and we'll send you a link to reset your password.</p>
                    </div>

                    <form asp-action="ForgotPassword" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Email -->
                        <div class="mb-4">
                            <label asp-for="Email" class="form-label fw-bold"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                                <input asp-for="Email" class="form-control" placeholder="your.email@example.com" autofocus />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid gap-2 mb-3">
                            <button type="submit" class="btn btn-info btn-lg text-white">
                                <i class="bi bi-send-fill"></i> Send Reset Link
                            </button>
                        </div>

                        <hr />

                        <div class="text-center">
                            <a asp-action="Login" class="text-decoration-none">
                                <i class="bi bi-arrow-left"></i> Back to Login
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <div class="alert alert-warning mt-3 small text-center">
                <i class="bi bi-info-circle"></i> The reset link will expire in 1 hour
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}