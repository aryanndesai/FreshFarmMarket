@model FreshFarmMarket.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password - Fresh Farm Market";
}

<style>
    .forgot-password-container {
        flex: 1;
        display: flex;
        padding: 40px 0 80px 0;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .forgot-password-card {
        border: none;
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
        overflow: hidden;
        background: white;
    }

    .forgot-password-header {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        padding: 40px 30px;
        text-align: center;
        border: none;
    }

    .forgot-password-header h3 {
        font-size: 28px;
        font-weight: 700;
        margin-bottom: 10px;
        color: white;
    }

    .forgot-password-header p {
        font-size: 16px;
        color: rgba(255, 255, 255, 0.95);
        margin: 0;
    }

    .forgot-icon {
        font-size: 56px;
        margin-bottom: 15px;
    }

    .forgot-password-body {
        padding: 40px 35px;
    }

    .info-box {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        color: white;
        padding: 20px;
        border-radius: 12px;
        text-align: center;
        margin-bottom: 30px;
        box-shadow: 0 4px 15px rgba(79, 172, 254, 0.3);
    }

    .info-box i {
        font-size: 48px;
        margin-bottom: 12px;
        display: block;
    }

    .info-box p {
        margin: 0;
        font-size: 15px;
        line-height: 1.6;
    }

    .form-label-custom {
        font-weight: 600;
        color: #495057;
        margin-bottom: 8px;
        font-size: 14px;
        display: block;
    }

    .input-group-custom {
        position: relative;
        margin-bottom: 20px;
    }

    .input-group-custom .input-icon {
        position: absolute;
        left: 16px;
        top: 50%;
        transform: translateY(-50%);
        color: #6c757d;
        font-size: 18px;
        z-index: 10;
    }

    .form-control-custom {
        border: 2px solid #e3e6f0;
        border-radius: 12px;
        padding: 14px 18px 14px 48px;
        font-size: 15px;
        transition: all 0.3s ease;
        width: 100%;
    }

    .form-control-custom:focus {
        border-color: #28a745;
        box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.15);
        outline: none;
    }

    .btn-submit-custom {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        border: none;
        padding: 16px 30px;
        font-size: 17px;
        font-weight: 600;
        border-radius: 12px;
        color: white;
        width: 100%;
        transition: all 0.3s ease;
        cursor: pointer;
        box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
        position: relative;
        z-index: 1000;
        margin-bottom: 15px;
    }

    .btn-submit-custom:hover:not(:disabled) {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(40, 167, 69, 0.4);
        background: linear-gradient(135deg, #20c997 0%, #28a745 100%);
    }

    .btn-submit-custom:active {
        transform: translateY(0);
    }

    .btn-submit-custom:disabled {
        opacity: 0.7;
        cursor: not-allowed;
    }

    .btn-submit-custom i {
        margin-right: 10px;
        font-size: 18px;
    }

    .btn-submit-custom .spinner-border {
        width: 18px;
        height: 18px;
        margin-right: 10px;
    }

    .divider {
        position: relative;
        text-align: center;
        margin: 25px 0;
    }

    .divider::before {
        content: '';
        position: absolute;
        left: 0;
        top: 50%;
        width: 100%;
        height: 1px;
        background: #e0e0e0;
    }

    .divider span {
        position: relative;
        background: white;
        padding: 0 15px;
        color: #999;
        font-size: 14px;
    }

    .back-to-login {
        text-align: center;
        padding: 15px;
        background: #f8f9fc;
        border-radius: 12px;
    }

    .back-to-login a {
        color: #28a745;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .back-to-login a:hover {
        color: #20c997;
        text-decoration: underline;
    }

    .back-to-login i {
        margin-right: 6px;
    }

    .expiry-notice {
        background: linear-gradient(135deg, #ffc107 0%, #ff9800 100%);
        color: white;
        padding: 15px 20px;
        border-radius: 12px;
        text-align: center;
        margin-top: 25px;
        font-size: 14px;
        box-shadow: 0 4px 15px rgba(255, 193, 7, 0.3);
    }

    .expiry-notice i {
        margin-right: 8px;
        font-size: 16px;
    }

    .alert-custom {
        border-radius: 12px;
        padding: 15px 20px;
        margin-bottom: 20px;
        border: none;
    }

    .validation-message {
        display: block;
        margin-top: 8px;
        font-size: 13px;
    }
</style>

<div class="forgot-password-container">
    <div class="container my-auto">
        <div class="row justify-content-center">
            <div class="col-md-5 col-lg-5">
                <div class="forgot-password-card">
                    <div class="forgot-password-header">
                        <div class="forgot-icon">üîê</div>
                        <h3>Forgot Password?</h3>
                        <p>No worries, we'll send you reset instructions</p>
                    </div>
                    <div class="forgot-password-body">
                        <div class="info-box">
                            <i class="bi bi-envelope-paper"></i>
                            <p>Enter your email address and we'll send you a secure link to reset your password.</p>
                        </div>

                        <form asp-action="ForgotPassword" method="post" id="forgotPasswordForm">
                            @Html.AntiForgeryToken()
                            
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-custom" role="alert"></div>

                            <!-- Email -->
                            <div class="mb-4">
                                <label asp-for="Email" class="form-label-custom">Email Address</label>
                                <div class="input-group-custom">
                                    <span class="input-icon">
                                        <i class="bi bi-envelope-fill"></i>
                                    </span>
                                    <input asp-for="Email" class="form-control-custom" placeholder="your.email@example.com" autofocus />
                                </div>
                                <span asp-validation-for="Email" class="text-danger validation-message"></span>
                            </div>

                            <!-- Submit Button -->
                            <button type="submit" class="btn-submit-custom" id="submitBtn">
                                <i class="bi bi-send-fill"></i> Send Reset Link
                            </button>

                            <div class="divider">
                                <span>or</span>
                            </div>

                            <div class="back-to-login">
                                <a asp-action="Login">
                                    <i class="bi bi-arrow-left"></i> Back to Login
                                </a>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="expiry-notice">
                    <i class="bi bi-clock-history"></i> The reset link will expire in 1 hour
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        // Add loading state on form submission
        document.getElementById('forgotPasswordForm').addEventListener('submit', function(e) {
            const submitBtn = document.getElementById('submitBtn');
            if (submitBtn) {
                submitBtn.disabled = true;
                submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Sending...';
            }
        });
    </script>
}