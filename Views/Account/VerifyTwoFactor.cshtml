@model FreshFarmMarket.ViewModels.VerifyTwoFactorViewModel
@{
    ViewData["Title"] = "Two-Factor Authentication";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0"><i class="bi bi-shield-check"></i> Verify Your Identity</h3>
                </div>
                <div class="card-body p-4 text-center">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="mb-4">
                        <i class="bi bi-envelope-check" style="font-size: 3rem; color: #0d6efd;"></i>
                        <p class="mt-3">We've sent a 6-digit verification code to:</p>
                        <strong>@Model.Email</strong>
                    </div>

                    <form asp-action="VerifyTwoFactor" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Email" />
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Verification Code -->
                        <div class="mb-3">
                            <label asp-for="Code" class="form-label fw-bold">Enter Verification Code</label>
                            <input asp-for="Code" class="form-control form-control-lg text-center" 
                                   placeholder="000000" maxlength="6" style="letter-spacing: 0.5em; font-size: 1.5rem;" autofocus />
                            <span asp-validation-for="Code" class="text-danger small"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid gap-2 mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle-fill"></i> Verify & Login
                            </button>
                        </div>

                        <!-- Resend Code -->
                        <div class="text-center">
                            <p class="small text-muted mb-2">Didn't receive the code?</p>
                            <a asp-action="ResendTwoFactorCode" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-arrow-clockwise"></i> Resend Code
                            </a>
                        </div>
                    </form>

                    <hr class="my-3" />

                    <div class="text-center">
                        <a asp-action="Login" class="text-decoration-none small">
                            <i class="bi bi-arrow-left"></i> Back to Login
                        </a>
                    </div>
                </div>
            </div>

            <div class="alert alert-info mt-3 small text-center">
                <i class="bi bi-clock"></i> This code expires in 5 minutes
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        // Auto-format code input (digits only)
        document.querySelector('input[name="Code"]').addEventListener('input', function(e) {
            this.value = this.value.replace(/\D/g, '');
        });
    </script>
}