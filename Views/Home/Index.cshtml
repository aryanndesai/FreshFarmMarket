@model FreshFarmMarket.Models.User
@{
    ViewData["Title"] = "Home - Fresh Farm Market";
    var passwordAgeInfo = ViewBag.PasswordAgeInfo as FreshFarmMarket.Models.PasswordAgeInfo;
    var currentSession = ViewBag.CurrentSession as FreshFarmMarket.Models.UserSession;
    var activeSessionCount = (int?)ViewBag.ActiveSessionCount ?? 0;
}

<div class="container mt-5">
    <!-- Welcome Banner -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="alert alert-success shadow-sm border-0" role="alert">
                <div class="d-flex align-items-center">
                    <i class="bi bi-check-circle-fill" style="font-size: 2rem; margin-right: 15px;"></i>
                    <div>
                        <h4 class="alert-heading mb-1">Welcome back, @Html.Encode(Model.FullName)! 🎉</h4>
                        <p class="mb-0">You're successfully logged in to Fresh Farm Market</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- User Profile Card -->
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow-lg h-100">
                <div class="card-header bg-success text-white text-center">
                    <h5 class="mb-0"><i class="bi bi-person-circle"></i> Your Profile</h5>
                </div>
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.PhotoPath))
                    {
                        <img src="@Model.PhotoPath" alt="Profile Photo" class="img-thumbnail rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center mb-3 mx-auto" 
                             style="width: 150px; height: 150px; font-size: 3rem;">
                            @Html.Encode(Model.FullName.Substring(0, 1))
                        </div>
                    }
                    <h4 class="mb-2">@Html.Encode(Model.FullName)</h4>
                    <p class="text-muted mb-3">
                        <i class="bi bi-envelope-fill"></i> @Html.Encode(Model.Email)
                    </p>
                    <p class="small text-muted">
                        <i class="bi bi-calendar-check"></i> Member since: @Model.CreatedAt.ToString("MMMM dd, yyyy")
                    </p>
                    @if (Model.LastLogin.HasValue)
                    {
                        <p class="small text-muted">
                            <i class="bi bi-clock-history"></i> Last login: @Model.LastLogin.Value.ToString("MMM dd, yyyy hh:mm tt")
                        </p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <!-- Personal Information -->
            <div class="card shadow-lg mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle-fill"></i> Personal Information</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong><i class="bi bi-person-badge"></i> Full Name:</strong>
                            <p class="mb-0">@Html.Encode(Model.FullName)</p>
                        </div>
                        <div class="col-md-6">
                            <strong><i class="bi bi-gender-ambiguous"></i> Gender:</strong>
                            <p class="mb-0">@Html.Encode(Model.Gender)</p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong><i class="bi bi-telephone-fill"></i> Mobile Number:</strong>
                            <p class="mb-0">@Html.Encode(Model.MobileNo)</p>
                        </div>
                        <div class="col-md-6">
                            <strong><i class="bi bi-envelope-at-fill"></i> Email:</strong>
                            <p class="mb-0">@Html.Encode(Model.Email)</p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-12">
                            <strong><i class="bi bi-geo-alt-fill"></i> Delivery Address:</strong>
                            <p class="mb-0">@Html.Encode(Model.DeliveryAddress)</p>
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.AboutMe))
                    {
                        <div class="row">
                            <div class="col-12">
                                <strong><i class="bi bi-chat-left-text-fill"></i> About Me:</strong>
                                <p class="mb-0">@Html.Encode(Model.AboutMe)</p>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Payment Information (Encrypted) -->
            <div class="card shadow-lg mb-4">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="bi bi-credit-card-fill"></i> Payment Information (Encrypted)</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info mb-0">
                        <i class="bi bi-shield-lock-fill"></i> <strong>Secure Data:</strong> Your credit card is encrypted with AES-256 encryption
                    </div>
                    <div class="mt-3">
                        <strong>Credit Card Number:</strong>
                        <p class="mb-0 font-monospace">
                            @if (!string.IsNullOrEmpty(Model.CreditCardNo))
                            {
                                @($"**** **** **** {Model.CreditCardNo.Substring(Math.Max(0, Model.CreditCardNo.Length - 4))}")
                            }
                            else
                            {
                                <span class="text-muted">Not available</span>
                            }
                        </p>
                    </div>
                </div>
            </div>

            <!-- Active Sessions Card -->
            <div class="card shadow-lg mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-laptop"></i> Active Sessions</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning mb-3">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        <strong>Security Notice:</strong> For security, only one active session is allowed at a time.
                        Logging in from another device will automatically terminate this session.
                    </div>
                    
                    <div class="mb-3">
                        <span class="badge bg-success fs-6">@activeSessionCount Active Session(s)</span>
                    </div>

                    @if (currentSession != null)
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered mb-0">
                                <tbody>
                                    <tr>
                                        <th style="width: 30%;"><i class="bi bi-geo-alt"></i> IP Address</th>
                                        <td>@Html.Encode(currentSession.IpAddress ?? "Unknown")</td>
                                    </tr>
                                    <tr>
                                        <th><i class="bi bi-browser-chrome"></i> Browser/Device</th>
                                        <td class="text-truncate" style="max-width: 300px;">
                                            @Html.Encode(currentSession.UserAgent ?? "Unknown")
                                        </td>
                                    </tr>
                                    <tr>
                                        <th><i class="bi bi-clock"></i> Login Time</th>
                                        <td>@currentSession.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy hh:mm tt")</td>
                                    </tr>
                                    <tr>
                                        <th><i class="bi bi-activity"></i> Last Activity</th>
                                        <td>@currentSession.LastActivityAt.ToLocalTime().ToString("MMM dd, yyyy hh:mm tt")</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>

            <!-- Password Security Policy Card -->
            @if (passwordAgeInfo != null)
            {
                <div class="card shadow-lg mb-4">
                    <div class="card-header bg-dark text-white">
                        <h5 class="mb-0"><i class="bi bi-key-fill"></i> Password Security Policy</h5>
                    </div>
                    <div class="card-body">
                        <!-- Password Age Status -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <strong><i class="bi bi-calendar3"></i> Last Changed:</strong>
                                <p class="mb-0">
                                    @passwordAgeInfo.PasswordLastChanged.ToLocalTime().ToString("MMM dd, yyyy hh:mm tt")
                                    <span class="text-muted">(@passwordAgeInfo.DaysSinceLastChange day(s) ago)</span>
                                </p>
                            </div>
                            <div class="col-md-6">
                                <strong><i class="bi bi-hourglass-split"></i> Expiry Status:</strong>
                                <p class="mb-0">
                                    <span class="badge bg-@passwordAgeInfo.ExpiryStatusColor fs-6">
                                        @if (passwordAgeInfo.PasswordExpired)
                                        {
                                            <text>Expired!</text>
                                        }
                                        else
                                        {
                                            @($"{passwordAgeInfo.DaysUntilExpiry} day(s) remaining")
                                        }
                                    </span>
                                </p>
                            </div>
                        </div>

                        @if (passwordAgeInfo.PasswordExpired)
                        {
                            <div class="alert alert-danger">
                                <i class="bi bi-exclamation-octagon-fill"></i>
                                <strong>Password Expired!</strong> Your password has exceeded the 90-day maximum age. Please change it immediately.
                            </div>
                        }
                        else if (passwordAgeInfo.DaysUntilExpiry <= 7)
                        {
                            <div class="alert alert-warning">
                                <i class="bi bi-exclamation-triangle-fill"></i>
                                <strong>Password Expiring Soon!</strong> Your password will expire in @passwordAgeInfo.DaysUntilExpiry day(s). Please change it soon.
                            </div>
                        }

                        <!-- Policy Information -->
                        <div class="card bg-light">
                            <div class="card-body">
                                <h6 class="card-title"><i class="bi bi-info-circle"></i> Password Policy Rules:</h6>
                                <ul class="mb-0">
                                    <li>Passwords must be changed every <strong>90 days</strong></li>
                                    <li>Minimum wait time between changes: <strong>5 minutes</strong></li>
                                    <li>Cannot reuse your last <strong>2 passwords</strong></li>
                                    <li>Minimum length: <strong>12 characters</strong></li>
                                    <li>Must contain: uppercase, lowercase, number, and special character</li>
                                </ul>
                            </div>
                        </div>

                        @if (!passwordAgeInfo.CanChangePassword)
                        {
                            <div class="alert alert-info mt-3 mb-0">
                                <i class="bi bi-clock-fill"></i>
                                You can change your password in <strong>@passwordAgeInfo.MinutesUntilCanChange minute(s)</strong>.
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- Security Features -->
            <div class="card shadow-lg">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="bi bi-shield-check"></i> Security Features Active</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2">
                            <i class="bi bi-check-circle-fill text-success"></i> 
                            <strong>Two-Factor Authentication:</strong> @(Model.TwoFactorEnabled ? "Enabled" : "Disabled")
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle-fill text-success"></i> 
                            <strong>Account Lockout Protection:</strong> Active (3 failed attempts)
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle-fill text-success"></i> 
                            <strong>Password Encryption:</strong> PBKDF2 (600,000 iterations)
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle-fill text-success"></i> 
                            <strong>Session Timeout:</strong> 10 minutes of inactivity
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle-fill text-success"></i> 
                            <strong>Concurrent Session Prevention:</strong> Active (1 session limit)
                        </li>
                        <li class="mb-0">
                            <i class="bi bi-check-circle-fill text-success"></i> 
                            <strong>Data Encryption:</strong> AES-256 for sensitive data
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-lg">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="bi bi-gear-fill"></i> Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex gap-2 flex-wrap">
                        @if (passwordAgeInfo != null && passwordAgeInfo.CanChangePassword)
                        {
                            <a asp-controller="Account" asp-action="ChangePassword" class="btn btn-warning">
                                <i class="bi bi-key-fill"></i> Change Password
                            </a>
                        }
                        else
                        {
                            <button class="btn btn-warning" disabled title="You can change your password in @(passwordAgeInfo?.MinutesUntilCanChange ?? 0) minute(s)">
                                <i class="bi bi-key-fill"></i> Change Password
                                <small class="ms-1">(@(passwordAgeInfo?.MinutesUntilCanChange ?? 0) min)</small>
                            </button>
                        }
                        <a asp-controller="Account" asp-action="Logout" class="btn btn-danger">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 10px;
    }
    .card-header {
        border-radius: 10px 10px 0 0 !important;
    }
</style>